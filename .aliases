#!/bin/sh

# Core
if command -v gls >/dev/null; then
  alias ls="gls -h --color --group-directories-first -I .DS_Store -I 'Icon'$'\r'"
else
  alias ls="ls -h -G -p"
fi
alias ll="ls -la"
alias lss="du -sh * 2>/dev/null | sort -hr" # sort by size

# Paths
wd=$([[ -d "$WORKING_DIR" ]] && echo "$WORKING_DIR" || echo "$HOME")
tmp="$wd/tmp"
cloud="$HOME/Library/Mobile Documents/com~apple~CloudDocs"
obsidian="$HOME/Library/Mobile Documents/iCloud~md~obsidian/Documents"

# Directories
alias cdw="cd $wd"
alias tmp="cd $tmp"
alias cdc="cd \"$cloud\""

# Files
alias aliases="$EDITOR $HOME/.aliases"
alias sshrc="$EDITOR $HOME/.ssh"
alias zshrc="$EDITOR $HOME/.zshrc"

# Functions
alias hide="chflags hidden"
alias unhide="chflags nohidden"

# Apps
alias te="open -a TextEdit"

# Shortcuts
alias omzr="omz reload"
alias ghrv="gh repo view --web"

# Network
alias ip="echo $(curl -s ipinfo.io/ip)"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias server="ruby -run -e httpd . -p 8000"

# Git short aliases: gcm -> git cm -> git commit -m
for git_alias in $(git aliases | sed 's/\ .*//'); do
  if ! command -v "g$git_alias" >/dev/null; then
    alias g"""${git_alias}"="git $git_alias"
  fi
done

# VSCode Insiders: alias to `code` if EDITOR=code-insiders
if [[ "$EDITOR" == "code-insiders" ]]; then
  alias code="code-insiders"
fi

# VSCode workspaces: code-<workspace> -> code ~/.vscode/workspaces/<workspace>.code-workspace
for workspace in $(find ~/.vscode/workspaces/*.code-workspace 2>/dev/null); do
  alias code-"""$workspace:t:r"="code $workspace"
done

unset git_alias workspace
