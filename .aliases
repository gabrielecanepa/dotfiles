# Unalias
unalias rm
unalias rubocop

# Network
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"
alias serve="ruby -run -e httpd . -p 8000"
alias serveo="ssh -R 80:$1 serveo.net"

# Directories
alias cdw="cd $WORKING_DIR"
alias cdd="cd $HOME/Desktop"
alias tmp="cd $WORKING_DIR/tmp"

# Open in editor
alias dotfiles="open -a $EDITOR $WORKING_DIR/dotfiles"
alias sshrc="open -a $EDITOR $HOME/.ssh"

# git
for git_alias in a br cm lg st pom; do
  alias g${git_alias}="git $git_alias"
done
alias gco="git co $1"
alias gpf="git pf $1 $2"

# Common commands
alias ls="/usr/local/bin/gls -ah --color --group-directories-first"
alias ll="ls -l"
alias lss="du -sh * 2>/dev/null | sort -hr"
