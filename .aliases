# Network
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"
alias serve="ruby -run -e httpd . -p 8000"

# Commands
alias ls="/usr/local/bin/gls -h --color --group-directories-first -I .DS_Store"
alias ll="ls -la"
alias lss="du -sh * 2>/dev/null | sort -hr" # by size

# Directories
wd="$WORKING_DIR"
tmp="$wd/tmp"
alias cdw="cd $wd"
alias tmp="cd $tmp"

# Editor
alias dotfiles="$EDITOR $@ $wd/dotfiles"
alias sshrc="$EDITOR $@ $HOME/.ssh"
# Atom
alias at="atom $@"
alias ata="atom -a $@"
alias att="atom ."
alias atta="atom -a ."

# Git shortcuts
for git_alias in $(git aliases | sed 's/\ .*//'); do
  if ! type -a "g$git_alias" >/dev/null; then # only if the command doesn't already exist!
    alias g${git_alias}="git $git_alias"
  fi
done
