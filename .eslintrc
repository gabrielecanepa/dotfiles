{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    },
    "experimentalObjectRestSpread": true
  },
  "extends": ["eslint:recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  },
  "globals": {
    "module": true,
    "process": true,
    "Promise": true
  },
  "rules": {
    // Base
    "comma-dangle": [2, "always-multiline"],
    "max-lines": 2,
    "no-console": 1,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-const": [
      2,
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "never"],
    "sort-keys": 0,
    "sort-vars": [
      1,
      {
        "ignoreCase": false
      }
    ]
  }
}
