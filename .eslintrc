{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "globals": {
    "module": true,
    "process": true,
    "Promise": true
  },
  "rules": {
    "max-lines": 2,
    "no-console": 1,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-const": [
      2,
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "prettier/prettier": [
      2,
      {
        "printWidth": 120,
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    ],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "never"],
    "sort-keys": 0,
    "sort-vars": [
      1,
      {
        "ignoreCase": false
      }
    ]
  }
}
