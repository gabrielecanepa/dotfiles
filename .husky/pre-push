#!/bin/sh

git_hooks=$(find .husky -maxdepth 1 -type f | grep -v ".DS_Store" | xargs)

commitlint --from=HEAD --to="$(git remote)/$(git branch --show-current)" --quiet
shellcheck .husky/commit-msg .husky/pre-push .aliases .bash_profile .bashrc .profile
prettier --check ".commitlintrc" ".{config,github,vscode}/**/*.{css,json,md,yml}" --ignore-path .gitignore --ignore-unknown --log-level warn
