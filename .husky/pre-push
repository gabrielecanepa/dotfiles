#!/bin/sh
# shellcheck disable=SC2086

git_hooks=$(find .husky -maxdepth 1 -type f | grep -v ".DS_Store" | xargs)

npx commitlint --from=HEAD --to="$(git remote)/$(git branch --show-current)" --quiet
npx shellcheck .husky/commit-msg .husky/pre-push .aliases .bash_profile .bashrc .profile
npx prettier --check ".commitlintrc" ".{config,github,vscode}/**/*.{css,json,md,yml}" --ignore-path .gitignore --ignore-unknown --log-level warn
